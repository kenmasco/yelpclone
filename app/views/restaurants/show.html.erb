<h1>Restaurant page for <%= @restaurant.name %></h1>
    <p><%= @restaurant.description %></p>
    <%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
    <%= link_to 'View All', restaurants_path %> 
     <%= link_to 'Edit restaurant', edit_restaurant_path(@restaurant) %> 
    
    <%= link_to 'Remove restaurant', restaurant_path(@restaurant), method: :delete, data: { confirm: 'Are you sure?' } %> 
    <% @restaurant.reviews.each do |review| %>
      <p><%= review.content %> - <%= review.rating %></p>

      <h4><%= link_to 'Edit Review', edit_restaurant_review_path(review.restaurant_id, review.id) %> </h4>
      <h4><%= link_to 'Delete', restaurant_review_path(review.restaurant_id, review.id), method: :delete, data: { confirm: 'Are you sure you want to delete your review?'} %>

     <%end%>
