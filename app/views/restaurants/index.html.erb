<% if @restaurants.none? %>
  No restaurants yet!
  <p> Would you like to <%= link_to 'create one?', new_restaurant_path %> </p>
<% end %>


<% @restaurants.each do |restaurant| %>
  <h1>
    <%= link_to restaurant.name, restaurant %>
  </h1>
  <h3> 
    Created <%= time_ago_in_words(restaurant.created_at) %>
  </h3>
  <p><%= truncate(restaurant.description, :length => 140) %></p>
  
  <%= link_to 'Edit restaurant', edit_restaurant_path(restaurant) %>
  
  <%= link_to 'Remove restaurant', restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %>
<%end%>

<h3><%= link_to 'Add a new restaurant', new_restaurant_path %></h3>