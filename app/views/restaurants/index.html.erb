<% if @restaurants.none? %>
  No restaurants yet!
  <p> Would you like to <%= link_to 'create one?', new_restaurant_path %> </p>
<% end %>

<p><%= link_to 'Add a new restaurant', new_restaurant_path %></p>

<% @restaurants.each do |restaurant| %>
  <h1><%= restaurant.name %></h1>
  <p><%= restaurant.description %></p>
  <%= link_to 'View Restaurant', restaurant_path(restaurant)  %>
  <%= link_to 'Edit restaurant', edit_restaurant_path(restaurant) %>
  <%= link_to 'Remove restaurant', restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %>

<%end%>